{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/code-examples/code-examples.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        { 
            "label": "Test",
            "command": "dotnet",
            "type": "shell",
            "args": [ "test", "${workspaceFolder}/code-examples/code-examples.csproj"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true
            },
            "problemMatcher": "$msCompile"
          }
    ]
}